<Window x:Class="JakubToma_utwory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JakubToma_utwory"
        mc:Ignorable="d"
        Title="Utwory muzyczne" Height="450" Width="685.556">
    <Grid Margin="0,0,2.667,-0.333" >

        <Button Content="Połącz"  Click="ConnectClick"   Margin="531,314,18,77"/>
        <Button Content="Właściwości"  Click="PropertiesClick"   Margin="531,272,18,119"/>
        <Button Content="Dodaj"  Click="AddClick"   Margin="531,358,18,33"/>
        <DataGrid x:Name="SongsView" HorizontalAlignment="Left" Height="421" VerticalAlignment="Top" Width="505" HorizontalGridLinesBrush="#FF898888" VerticalGridLinesBrush="#FF8D8B8B" AutoGenerateColumns="False">

            <DataGridTextColumn Header="Tytuł" Binding="{Binding songTitle}" />
            <DataGridTextColumn Header="Album" Binding="{Binding songAlbum}" />
            <DataGridTextColumn Header="Wykonawca" Binding="{Binding songArtist}" />
            <DataGridTextColumn Header="Gatunek" Binding="{Binding songGenre}" />

        </DataGrid>
    </Grid>
</Window>
